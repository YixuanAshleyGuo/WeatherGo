<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/condition_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/content_padding_normal"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp" />
    <LinearLayout
        android:id="@+id/condition_grid_head"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <!--condition image icon-->
        <ImageView android:id="@+id/condition_img"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/condition_location"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"/>
            <TextView
                android:id="@+id/condition_weather"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"/>
            <TextView
                android:id="@+id/condition_temperature"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        </LinearLayout>
    </LinearLayout>
    <View style="@style/Divider"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/condition_list_view"
        android:layout_weight="10">

    </ListView>

</LinearLayout>